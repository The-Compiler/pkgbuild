#!/bin/bash

post_upgrade() {
    cat <<- EOF
    You might need to merge any changes in /usr/share/diylc/config.xml to the
    config file in your home directory, at ~/.diylc/config.xml.

    If you are okay with losing your config, you could also do:

    cp /usr/share/diylc/config.xml ~/.diylc
    EOF
}
