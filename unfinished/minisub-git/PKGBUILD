# Maintainer: Florian Bruhin (The Compiler) <archlinux.org@the-compiler.org>

pkgname=minisub-git
pkgver=20121122
pkgrel=1
pkgdesc="HTML5 Mini Player for Subsonic"
arch=('any')
url="https://github.com/tsquillario/MiniSub"
license=('GPL2')
depends=('subsonic')
makedepends=('git')

_gitroot=https://github.com/tsquillario/MiniSub.git
_gitname=MiniSub

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin master
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname"
  git checkout 015601641c013390c87aef144bb5cb2ce3e17990
  install -d "$pkgdir/usr/share/webapps/minisub"

  cp index.html "$pkgdir/usr/share/webapps/minisub"
  cp -R images js style "$pkgdir/usr/share/webapps/minisub"
}

# vim:set ts=2 sw=2 et:
